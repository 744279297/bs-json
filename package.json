{
  "name": "bs-json",
  "version": "0.2.4",
  "description": "Compositional JSON encode/decode library for BuckleScript",
  "main": "index.js",
  "scripts": {
    "build": "bsb -make-world",
    "start": "bsb -make-world -w",
    "coverage": "nyc report --temp-directory=coverage --reporter=text-lcov | coveralls",
    "test": "npm run build && jest --coverage && npm run coverage && npm run test:examples",
    "test:examples": "npm run build && ./run_examples.sh",
    "watch:bsb": "bsb -make-world -w",
    "watch:jest": "jest --coverage --watchAll",
    "watch:screen": "screen -c .screenrc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/reasonml-community/bs-json.git"
  },
  "keywords": [
    "bucklescript",
    "json"
  ],
  "author": "glennsl",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/reasonml-community/bs-json/issues"
  },
  "homepage": "https://github.com/reasonml-community/bs-json#readme",
  "devDependencies": {
    "bs-jest": "reasonml-community/bs-jest",
    "bs-platform": "^1.9.0",
    "coveralls": "^3.0.0",
    "nyc": "^11.4.1"
  }
}
